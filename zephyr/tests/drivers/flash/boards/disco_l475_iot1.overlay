/ {
	chosen {
		zephyr,flash-controller = &flash;
	};
};

&quadspi {
	qspi-nor-flash@0 {
		partitions {
			/delete-node/ partition@d8000;
		};
	};
};

&flash0 {
        partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Set 2KB of storage at the end of 1MB flash */
		storage_partition: partition@ff800 {
			label = "storage";
			reg = <0x000ff800 0x00000800>;
		};
	};
};
